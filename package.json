{
  "name": "haxe-test-adapter",
  "displayName": "Haxe Test Adapter",
  "description": "A Haxe Test Adapter for Visual Studio Code",
  "icon": "resources/icon.png",
  "author": "Alexander Blum <Alexander.Blum@gmail.com>",
  "publisher": "vshaxe",
  "version": "0.0.1",
  "license": "MIT",
  "homepage": "https://github.com/vshaxe/haxe-test-adapter",
  "repository": {
    "type": "git",
    "url": "https://github.com/vshaxe/haxe-test-adapter.git"
  },
  "bugs": {
    "url": "https://github.com/vshaxe/haxe-test-adapter/issues"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "test",
    "testing",
    "haxe"
  ],
  "main": "bin/main.js",
  "dependencies": {
    "vscode-test-adapter-api": "^1.1.0",
    "vscode-test-adapter-util": "^0.5.1"
  },
  "devDependencies": {
    "vsce": "^1.53.2",
    "vscode": "^1.1.26"
  },
  "engines": {
    "vscode": "^1.23.0"
  },
  "extensionDependencies": [
    "hbenl.vscode-test-explorer"
  ],
  "activationEvents": [
    "onLanguage:haxe"
  ],
  "contributes": {
    "commands": [
      {
        "title": "Setup",
        "command": "haxe-test-adapter.setup",
        "category": "Haxe Test Adapter"
      }
    ],
    "configuration": {
      "title": "Haxe Test Adapter",
      "properties": {
        "haxetestadapter.runTestsCmd": {
          "type": "string",
          "default": "haxe buildTest.hxml -D haxe_test_adapter_enabled",
          "description": "Shell command to run unittests"
        }
      }
    }
  }
}
